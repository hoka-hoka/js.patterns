{
  "compilerOptions": {
    "rootDir": "src/ts",
    "outDir": "src/js",
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node", // relative node_modules
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["dom", "es6", "es2015.collection", "es2015.iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}